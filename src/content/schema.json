{
  "type": "object",
  "required": ["mode", "data"],
  "properties": {
    "mode": {"$ref": "#/$defs/mode"},
    "sync": {"type": "boolean"},
    "proxyDNS": {"type": "boolean"},
    "passthrough": {"type": "string"},

    "data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "minProperties": 13,
        "additionalProperties": false,
        "properties": {
          "active": {"type": "boolean"},
          "title": {"type": "string"},
          "color": {"type": "string"},
          "type": {"type": "string", "enum": ["http", "https", "socks4", "socks5", "pac", "direct"]},
          "hostname": {"type": "string", "format": "hostname"},
          "port": {"type": "string", "pattern": "^\\d*$"},
          "username": {"type": "string"},
          "password": {"type": "string"},
          "cc": {"type": "string", "pattern": "^([A-Z]{2}|)$"},
          "city": {"type": "string"},
          "include": {"$ref": "#/$defs/include"},
          "exclude": {"$ref": "#/$defs/include"},
          "pac": {"type": "string", "oneOf": [{"const": ""}, {"format": "uri"}]}
        }
      }
    },

    "container": {
      "type": "object",
      "properties": {
        "incognito": {"$ref": "#/$defs/host"},
        "container-1": {"$ref": "#/$defs/host"},
        "container-2": {"$ref": "#/$defs/host"},
        "container-3": {"$ref": "#/$defs/host"},
        "container-4": {"$ref": "#/$defs/host"}
      }
    },

    "commands": {
      "type": "object",
      "properties": {
        "setProxy": {"$ref": "#/$defs/host"},
        "setTabProxy": {"$ref": "#/$defs/host"},
        "quickAdd": {"$ref": "#/$defs/host"}
      }
    }
  },

  "$defs": {
    "include": {
      "type": "array",
      "items": {
        "type": "object",
        "minProperties": 4,
        "additionalProperties": false,
        "properties": {
          "type": {"type": "string", "enum": ["wildcard", "regex"]},
          "title": {"type": "string"},
          "pattern": {"type": "string"},
          "active": {"type": "boolean"}
        }
      }
    },
    "host": {
      "type": "string",
      "pattern": "^(.+:\\d+|direct)$"
    },
    "mode": {
      "type": "string",
      "anyOf": [
        {"enum": ["pattern", "disable", "direct"]},
        {"format": "uri"}
      ]
    }
  }
}