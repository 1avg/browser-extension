{
  "type": "object",
  "required": ["mode", "data"],
  "properties": {
    "mode": {"type": "string"},
    "sync": {"type": "boolean"},
    "proxyDNS": {"type": "boolean"},
    "passthrough": {"type": "string"},
    "data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "minProperties": 13,
        "additionalProperties": false,
        "properties": {
          "active": {"type": "boolean"},
          "title": {"type": "string"},
          "color": {"type": "string"},
          "type": {"type": "string", "enum": ["http", "https", "socks4", "socks5", "pac", "direct"]},
          "hostname": {"type": "string", "format": "hostname"},
          "port": {"type": "string", "pattern": "^\\d*$"},
          "username": {"type": "string"},
          "password": {"type": "string"},
          "cc": {"type": "string", "pattern": "^([A-Z]{2}|)$"},
          "city": {"type": "string"},
          "include": {"$ref": "#/$defs/include-exclude"},
          "exclude": {"$ref": "#/$defs/include-exclude"},
          "pac": {"type": "string", "oneOf": [{"const": ""}, {"format": "uri"}]}
        }
      }
    },
    "container": {
      "type": "object",
      "properties": {
        "incognito": {"type": "string"},
        "container-1": {"type": "string"},
        "container-2": {"type": "string"},
        "container-3": {"type": "string"},
        "container-4": {"type": "string"}
      }
    },
    "commands": {
      "type": "object",
      "properties": {
        "setProxy": {"type": "string"},
        "setTabProxy": {"type": "string"},
        "quickAdd": {"type": "string"}
      }
    }
  },

  "$defs": {
    "include-exclude": {
      "type": "array",
      "items": {
        "type": "object",
        "minProperties": 4,
        "additionalProperties": false,
        "properties": {
          "type": {"type": "string", "enum": ["wildcard", "regex"]},
          "title": {"type": "string"},
          "pattern": {"type": "string"},
          "active": {"type": "boolean"}
        }
      }
    }
  }
}